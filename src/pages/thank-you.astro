---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
---

<BaseLayout title="Thank you!" description="We received your message.">
  <div id="top">
    <Navbar />
  </div>

  <main class="mx-auto max-w-6xl px-4">
    <section class="py-14 md:py-20">
      <div class="panel panel-pad">
        <h1 class="text-3xl font-semibold tracking-tight text-white">Thank you!</h1>
        <p class="mt-3 text-zinc-200">
          We received your message and will respond soon.
        </p>
        <button type="button" data-nav data-target="services" class="btn-solid mt-6">
          Back to Services
        </button>
      </div>
    </section>
  </main>
</BaseLayout>
